{
    "name": "root",
    "private": true,
    "workspaces": {
        "packages": [
            "client",
            "extension",
            "common"
        ]
    },
    "devDependencies": {
        "@typescript-eslint/parser": "^6.12.0",
        "eslint": "^8.54.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "2.4.1"
    },
    "scripts": {
        "verify": "scripts/loc-keys-match && scripts/loc-files-are-web-accessible && yarn workspace @project/common run test && yarn workspace @project/client run test:nowatch && yarn run eslint common extension/src && yarn run pretty:check",
        "pretty": "yarn prettier --write './(client|common|extension)/**/*.(js|ts|tsx|css)'",
        "pretty:check": "yarn prettier --check './(client|common|extension)/**/*.(js|ts|tsx|css)'"
    },
    "packageManager": "yarn@3.2.0"
}
